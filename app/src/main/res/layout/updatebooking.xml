<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".BookService"
    android:background="@drawable/bg">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/utxtselecttime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".BookService">

        <Button
            android:id="@+id/ubtnpickdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:background="@color/colorAccent"
            android:text="Pick Date"
            android:textColor="@color/design_default_color_on_secondary"/>

        <EditText
            android:id="@+id/utxtdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="Selected Date" />

        <TextView
            android:id="@+id/utextView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Select Slot TIme"
            android:textSize="20dp" />


        <RadioGroup
            android:id="@+id/uSlottime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/urbtnslot1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:cursorVisible="true"
                android:text="9AM - 11AM" />

            <RadioButton
                android:id="@+id/urbtnslot2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:cursorVisible="true"
                android:text="12PM - 2PM" />

            <RadioButton
                android:id="@+id/urbtnslot3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:cursorVisible="true"
                android:text="2PM - 4PM" />


        </RadioGroup>

        <TextView
            android:id="@+id/utextView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Select Service Type"
            android:textSize="20sp" />

        <RadioGroup

            android:id="@+id/urbtnpicktype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/urbtnpickup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:cursorVisible="true"
                android:text="Pickup And Drop" />

            <RadioButton
                android:id="@+id/urbtnvisit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:cursorVisible="true"
                android:text="Visit Center" />


        </RadioGroup>

        <Spinner
            android:id="@+id/uspinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/uspaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Service Provicer"
            android:textAlignment="center" />


        <EditText
            android:id="@+id/uname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:ems="10"
            android:hint="Name"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/uaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Address"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/uphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint=" phone number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/uvehicalno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Vehical No"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <Button
            android:id="@+id/ubtnok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:background="@color/colorAccent"
            android:text="Submit"
            android:textColor="@color/design_default_color_on_secondary"/>




    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>